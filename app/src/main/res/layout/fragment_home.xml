<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smartAmigos.com.nammakarnataka.HomeFragment"
    android:background="@drawable/wallpaper1"
    >


        <smartAmigos.com.nammakarnataka.fonts.titles_font
            android:layout_marginTop="16dp"
            android:id="@+id/nearme_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="NEARBY PLACES"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nearme_textview"
            android:id="@+id/nearme_list"
            android:divider="@null"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="36dp"
            />

</RelativeLayout>
